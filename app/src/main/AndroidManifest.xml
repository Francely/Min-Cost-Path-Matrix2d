<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.firdavsiimajidzoda.minmatrix2d">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".Classes.UIs.EntryActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Classes.UIs.ExamplesActivity" />
        <activity android:name=".Classes.UIs.DisplayActivity" />
        <activity android:name=".Classes.UIs.SetMatrixActivity" />
        <activity android:name=".Classes.UIs.FillMatrixActivity"
                   android:windowSoftInputMode="adjustPan"/>
    </application>

</manifest>